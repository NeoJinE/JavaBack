package Ch4;

import java.util.Scanner;

public class Ch04_39_BreakEx {

	public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        int balance = 100000; // 초기 잔액 설정
        int withdrawal; // 인출 금액 변수
        
        // 현재 잔액 출력
        System.out.println("현재 잔액: " + balance);
        
        while (true) {
            // 인출액 입력 받기
            System.out.print("인출액 입력: ");
            withdrawal = sc.nextInt();
            
            // 잔액 부족 여부 확인
            if (balance >= withdrawal) {
                balance -= withdrawal; // 잔액에서 인출액 차감
                System.out.println("인출 완료. 현재 잔액: " + balance);
                continue; // 다음 출금을 위해 반복문 시작 지점으로 이동
            } else {
                System.out.println("잔액 부족. 현재 잔액: " + balance);
                break; // 잔액 부족 시 반복문 종료
            }
        }
        
        sc.close(); // 스캐너 닫기
	}

}
