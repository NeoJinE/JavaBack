package Ch06_class_sec07;

public class TvMain {

	public static void main(String[] args) {
		// Tv 클래스 인스턴스 생성 및 사용
		//생성 및 사용할 떄 메모리에서 어떻게 움직이는지 설명
		
		//1.인스턴스 참조변수 선언 => stack영역에 t 참조변수 만들고, 값은 x => t 참조변수를 사용 불가.
		Tv t ; 

		//2.인스턴스 영역 할당.
		//스택의 t영역에 인스턴스영역 시작 주소 저장
		//힙영역에 생성된 인스턴스 영역내 변수는 초기화 된다.
		t = new Tv();

		//3.멤버변수에 실제 값 저장.
		//t에 저장된 주소로 접근하고,=>힙영역에서 해당 주소에서 channel 변수를 찾아서 값 7을 저장
		t.channel = 7; 
		
		//4. 멤버 메서드를 호출.
		//t에 저장된 주소로 접근하고, => 힙영역에서 channelDown 메서드내 실행코드를 찾아서 실행.
		//메서드 실행 코드에 의해서 channel 변수의 값이 6으로 변경된다.
		t.channelDown(); 
		
		
		
		
	}

}
