package Ch4;

import java.util.Scanner;

public class Ch04_26_For3 {
	public static void main(String[] args) {
		//무한반복 for 문
		
		//무한반복
		for(; ;) { // {}의 문장으로 무한반복 할 것.
			int num;
			Scanner sc = new Scanner(System.in);
			System.out.println("숫자를 입력하세요");
			num = sc.nextInt();
			System.out.println("당신이 입력한 숫자는" + num + "입니다");
			sc.close();
		}
	}
}
