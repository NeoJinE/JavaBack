package ch04;

public class ch04_20_ForEx2 {

	public static void main(String[] args) {
		// 1~10사이의 값 중 홀수, 홀수의 합을 출력하는 프로그램.
		//범위의 합을 계산하려면, 누적변수 필요하다.
		//누적변수는 반복 전에 선언하고, 초기화 되어야 한다.
		int Sum = 0;
		int i = 0;
		//i를 1부터 시작, 홀수가 필요하므로, +=2로 작성(if문 생략가능)
		for(i=1; i<=10; i+=2) {
		//홀수 출력문 작성.	
			System.out.println(i);
			Sum += i;
		}
		//아래 문장이 오류 없이 실행되도록 for문의 코드를 변경하시오
		//반복문 내에서 사용한 i변수의 값을 반복문 블럭 밖에서 사용하려면, 변수 i를 반복문내 지역변수가 아니여야 한다.
		//for문의 i 변수 선언 및 초기화를 for문 이전에 진행.
		System.out.printf("1~%d 까지의 수 중 홀수의 합 : %d", i, Sum);

	}

}
