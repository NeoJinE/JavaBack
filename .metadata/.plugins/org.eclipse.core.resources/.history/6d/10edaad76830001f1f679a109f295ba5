package Practice;

import java.util.Scanner;

public class Practice1 {

	public static void main(String[] args) {
		// 주민등록번호 입력받고, 성별번호로 성별 구분하기.
		Scanner sc = new Scanner(System.in);
		//1.변수선언
		String RegNum;
		char GenNum = '0';
		String Gender = "";
		
		//2..주민등록번호 입력받기.
		System.out.println("주민등록번호 입력");
		RegNum = sc.next();
		
		//3. 주민등록번호 양식 확인
		if(RegNum.length() == 14) {
			GenNum = RegNum.charAt(7);
			
		//4. 입력된 주민번호의 성별번호를 통해 성별 구분
			switch(GenNum) {
			case '1': ;
			case '3': ;
				Gender = "남";
			break;
			
			case '2': ;
			case '4': ;
				Gender = "여";
			break;
			default: 
			System.out.println("잘못된 입력양식입니다.");
			}
			
			System.out.println(Gender);
		}else {
			System.out.println("잘못된 입력양식입니다.");		
		}
		sc.close();
	}

}
