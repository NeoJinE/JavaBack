package Ch4;

import java.text.DecimalFormat;

public class Ch04_07_NumberFormat {

	public static void main(String[] args) {
		int price = 1000000;
		
		// 천단위 구분자 표시방법
		//1. DecimalFormat 클래스 사용
		DecimalFormat df = new DecimalFormat("#,###"); //정수부분 천단위 구분자 기호 #
		System.out.println("가격: " + df.format(price));
		
		//2. printf()
		System.out.printf("가격: %,d , price");
		
		//3. String.format() => 형식만 변경하는 메서드
		System.out.println(String.format("가격: %,d", price));
	}

}
