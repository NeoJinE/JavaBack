package sec11;

public class SavingsMain {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		  Savings savings = new Savings();

	        // setName 호출
	        savings.setName();

	        // setBalance 호출
	        savings.setBalance();

	        // getName 호출하여 예금주 출력
	        System.out.println("예금주: " + savings.getName());

	        // getBalance 호출하여 입금 전 잔액 출력
	        System.out.println("입금 전 잔액: " + savings.getBalance());

	        // inputDeposit 호출하여 예금액 입력받고 잔액 계산
	        savings.inputDeposit();

	        // getInterest 호출하여 이자 계산 후 이자 출력
	        int interest = savings.getInterest();
	        System.out.println("이자: " + interest);

	        // getBalance 호출하여 잔액 출력
	        int balance = savings.getBalance();
	        System.out.println("잔액: " + balance);
	}

}
